<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubFetcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_lighter</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="TextButtonDetails" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="OutlinedCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_outline_color</item>
        <item name="contentPadding">6dp</item>
    </style>

</resources>